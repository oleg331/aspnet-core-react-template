    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
    margin-bottom: 83px;

    &.recording-studio {
      background: url(../assets/images/backgrounds/bg-recording.jpg) center no-repeat;
      background-size: cover;
