@import "./_reset.styl";
@import "./_fonts.styl";
@import "./_base.styl";

body {
  background: #fff;

  @media $break-middle {
    &.active {
      overflow-y: hidden;
    }
  }
}

a {
  text-decoration: none;
}

.wrapper {
  position: relative;
  min-width: 320px;

  @media $break-middle {
    height: 100vh;
  }
}

// header

#root{
  position: relative;
}

#header {
  padding: 12px 0 10px;
  font: 22px $akrobatregular;
  color: $gray;
  background: $white;
  height: 94px;
  z-index: 999;

  @media $break-large {
    padding: 1vw 0;
  }

  @media $break-middle {
    background: transparent;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    height: 0;
    padding: 0;
  }

  &.inner-page {
    @media $break-middle {
      position: fixed;
    }

    .burger {
      .icon-burger {
        background: inherit;
        background-color: #000;
        -webkit-mask-image: url(../assets/images/mobile/burger.svg);
        -webkit-mask-image: url(../assets/images/mobile/burger.svg);
        mask-image: url(../assets/images/mobile/burger.svg);
        -webkit-mask-position: 0 0;
        mask-position: 0 0;
        -webkit-mask-repeat: no-repeat;
        mask-repeat: no-repeat;
        -webkit-transition: 0.5s background-color;
        transition: 0.5s background-color;
      }
    }
  }

  .burger {
    display: none;
    margin: 0 5px 0 0;

    .icon-burger {
      display: inline-block;
      width: 40px;
      height: 24px;
      background-color: #fff;
      -webkit-mask-image: url(../assets/images/mobile/burger.svg);
      -webkit-mask-image: url(../assets/images/mobile/burger.svg);
      mask-image: url(../assets/images/mobile/burger.svg);
      -webkit-mask-position: 0 0;
      mask-position: 0 0;
      -webkit-mask-repeat: no-repeat;
      mask-repeat: no-repeat;

      &.dark {
        background-color: #000;
      }
    }

    .burger__nav {
      display: none;
      background: $gray;
      position: fixed;
      right: 0;
      top: 0;
      bottom: 0;
      padding: 62px 54px 94px;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
          -ms-flex-flow: column;
              flex-flow: column;
      -webkit-box-align: end;
          -ms-flex-align: end;
              align-items: flex-end;
      font: 22px $akrobatregular;
      color: $white;
      min-width: 361px;
      max-width: 100%;
      -webkit-box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
              box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
      overflow-y: auto;
      width: 100%;

      &.active {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
      }

      .icon-close {
        display: inline-block;
        width: 15px;
        height: 15px;
        background: url(../assets/images/mobile/icon-close.svg) 0 0 no-repeat;
        position: absolute;
        left: 59px;
        top: 73px;
      }

      .logo-mob {
        margin-bottom: 34px;
      }

      nav {
        text-align: right;
        width: 77%;
        min-width: 150px;
        border-bottom: 1px solid #fff;
        margin-bottom: 32px;

        ul {
          display: -webkit-box;
          display: -ms-flexbox;
          display: flex;
          -webkit-box-orient: vertical;
          -webkit-box-direction: normal;
              -ms-flex-flow: column;
                  flex-flow: column;
        }

        li {
          margin: 0 0 38px;
          text-transform: uppercase;

          &.active a {
            border-color: $red;
          }
        }

        a {
          color: $white;
          border-bottom: 3px solid $transparent;
          -webkit-transition: 0.2s border-bottom;
          transition: 0.2s border-bottom;

          &:hover {
            border-color: $red;
          }
        }

        &.active {
          display: block;
        }
      }

      .header__select {
        text-transform: uppercase;
        color: $white;
        border-bottom: 1px solid #fff;
        width: 77%;
        min-width: 150px;
        text-align: right;
        padding-bottom: 34px;
        margin-bottom: 29px;

        a {
          color: $white;
          -webkit-transition: 0.2s color;
          transition: 0.2s color;

          &.active,
          &:hover {
            color: $red;
          }
          &:not(:last-of-type) {
            &::after {
              content: "/";
              margin-left: 5px;
              color: $white;
            }
          }
        }
      }

      .header__number {
        color: $white;
        font-size: 29px;
        margin-bottom: 30px;
      }

      .header__signup {
        font-size: 29px;
        padding: 15px 19px 9px;
      }
    }
  }

  .logo {
    width: 80px;
    height: 80px;
    background url(../assets/images/iam.jpg) center no-repeat;
    border-radius: 50%;
    background-size: cover;
    margin: 4px 57px 0 0;
    display: inline-block;
    vertical-align: top;
    .logo-mob {
      display: none;
    }
    @media $break-large {
      margin-right: 15px;
      margin-left: 10px;
    }
    @media $break-middle {
      .logo-pc {
        display: none;
      }
      .logo-mob {
        display: block;
      }
    }
  }

  .wrapper__container {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
    height 100%;
  }

  .header__number {
    color: $gray;
    margin: 5px 0 0 auto;
    white-space: nowrap;
    @media $break-large {
      font-size: 2.5vw;
    }
  }

  .header__signup {
    margin: 0 0 5px 28px;
    font: 29px $bebasregular;
    color: $white;
    background: $red;
    text-transform: uppercase;
    padding: 14px 19px 9px;
    @media $break-large {
      padding: 1.2vw 1.2vw 0.7vw;
      margin-left: 1vw;
      margin-bottom: 0;
      font-size: 2vw;
    }
  }

  @media $break-middle {
    .wrapper__container {
      -webkit-box-pack: justify;
          -ms-flex-pack: justify;
              justify-content: space-between;
    }

    .logo {
      position: absolute;
      left: 10px;
      top: 1vh;
      z-index: 10;
    }

    .burger {
      display: block;
      position: absolute;
      right: 10px;
      top: 20px;
      z-index: 10;
    }
  }
}

.wrapper__container {
  max-width: 1250px;
  margin: 0 auto;
  padding: 0 10px;
}

// end header

// main

#main {
  position: relative;
  height: 100%;

  .main__container {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    height: calc(100vh - 72px - 121px);
    min-height: 500px;
    @media $break-middle {
      height: 100vh;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
          -ms-flex-flow: column;
              flex-flow: column;
      max-width: inherit;
      min-height: 50%;
    }

    .block-main {
      -webkit-box-flex: 0;
          -ms-flex: 0 0 50%;
              flex: 0 0 50%;
      max-width: 50%;
      position: relative;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
          -ms-flex-align: center;
              align-items: center;
      color: $white;
      min-height: 500px;

      &.skills-block {
        background: url(../assets/images/bg-skills.jpeg) top center no-repeat;
        background-size: cover;
        -webkit-box-pack: end;
            -ms-flex-pack: end;
                justify-content: flex-end;
        text-align: right;
        padding: 0 275px 0 20px;
        @media $break-large {
          padding-right: 16vw;
        }
      }

      &.dev-block {
        background: url(../assets/images/bg-dev.jpeg) top center no-repeat;
        background-size: cover;
        padding: 0 20px 0 275px;
        @media $break-large {
          padding-left: 16vw;
        }
      }

      @media $break-middle {
        &.skills-block,
        &.dev-block {
          max-width: inherit;
          -webkit-box-pack: center;
              -ms-flex-pack: center;
                  justify-content: center;
          padding: 0;
          text-align: center;
          min-height: inherit;
          -webkit-box-flex: inherit;
              -ms-flex: inherit;
                  flex: inherit;
          overflow: hidden;
          &:not(.active) {
            cursor: pointer;
          }
        }
      }
      @-webkit-keyframes blink-caret {
        from,
        to {
          border-color: transparent;
        }
        50% {
          border-color: orange;
        }
      }
      @keyframes blink-caret {
        from,
        to {
          border-color: transparent;
        }
        50% {
          border-color: orange;
        }
      }
      @-webkit-keyframes typing {
        from {
          height: 0;
        }
        to {
          height: 100%;
        }
      }
      @keyframes typing {
        from {
          height: 0;
        }
        to {
          height: 100%;
        }
      }

      .block-main__container {
        // overflow: hidden;
        position: relative;
        z-index: 1;
        max-width: 420px;
        // height: auto;
        // height: 50px;
        -webkit-transition: 1s height;
        transition: 1s height;

        &.disabled {
          height: 100%;
        }
      }

      .block-main__head {
        font: 48px $bebasregular;
        text-transform: uppercase;
        margin-bottom: 16px;
      }

      p {
        font: 18px $akrobatregular;
        margin-bottom: 30px;
      }

      .block-main__url {
        position: relative;
        display: inline-block;
        cursor: pointer;
        outline: none;
        border: 0;
        vertical-align: middle;
        text-decoration: none;
        background: transparent;
        padding: 0;
        font-size: inherit;
        font-family: inherit;
        & {
          width: 18rem;
          height: auto;
          &.block-url__left .button-text {
            text-align: right;
            padding-right: 65px;
          }
          &.block-url__left .circle {
            float: right;
            -webkit-transform: rotate(180deg);
                    transform: rotate(180deg);
            @media $break-middle {
              -webkit-transform: rotate(0);
                      transform: rotate(0);
              float: left;
            }
          }
          .circle {
            transition-more(all 0.45s cubic-bezier(0.65, 0, 0.076, 1));
            position: relative;
            margin: 0;
            width: 3rem;
            height: 3rem;
            background: $red;
            border-radius: 1.625rem;
            .icon {
              transition-more(
                all,
                0.45s,
                cubic-bezier(0.65, 0, 0.076, 1)
              );
              position: absolute;
              top: 0;
              bottom: 0;
              margin: auto;
              background: $white-more;
              &.arrow {
                transition-more(
                  all,
                  0.45s,
                  cubic-bezier(0.65, 0, 0.076, 1)
                );
                left: 0.625rem;
                width: 1.125rem;
                height: 0.125rem;
                background: none;
                &::before {
                  position: absolute;
                  content: "";
                  top: -0.3rem;
                  right: 0.0625rem;
                  width: 0.625rem;
                  height: 0.625rem;
                  border-top: 0.125rem solid #fff;
                  border-right: 0.125rem solid #fff;
                  -webkit-transform: rotate(45deg);
                          transform: rotate(45deg);
                }
              }
            }
          }
          .button-text {
            transition-more(
              all,
              0.45s,
              cubic-bezier(0.65, 0, 0.076, 1)
            );
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            padding: 0.75rem 0;
            margin: 0 0 0 0;
            color: $white;
            font-weight: 700;
            line-height: 1.6;
            text-align: center;
            font: 18px $akrobatregular;
            display: block;
          }
        }
        &:hover {
          .circle {
            width: 100%;
            .icon {
              &.arrow {
                background: $white-more;
                -webkit-transform: translate(1rem, 0);
                        transform: translate(1rem, 0);
              }
            }
          }
          .button-text {
            color: $white-more;
          }
        }
        @media $break-middle {
          .circle {
            width: 100%;
            .icon {
              &.arrow {
                background: $white-more;
                -webkit-transform: translate(1rem, 0);
                        transform: translate(1rem, 0);
              }
            }
          }
          .button-text {
            color: $white-more;
          }
        }
      }

      @media $break-middle {
        p,
        .block-main__url {
          display: none;
          max-width: 300px;
          padding: 0 20px;
        }
      }

      &::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
      }

      .block-main__arrow {
        display: none;
        width: 13px;
        height: 21px;
        background: url(../assets/images/icon-arrow-main.svg) center no-repeat;
        position: absolute;
        left: 0;
        right: 0;
        margin: 0 auto;
        cursor: pointer;
        -webkit-transition: 0.2s;
        transition: 0.2s;

        &.arrow-top {
          bottom: 15px;
          -webkit-transform: rotate(-90deg);
                  transform: rotate(-90deg);
        }

        &.arrow-bottom {
          top: 15px;
          -webkit-transform: rotate(90deg);
                  transform: rotate(90deg);
        }

        @media $break-middle {
          display: inline-block;
        }
      }

      &.active .block-main__arrow {
        &.arrow-top {
          -webkit-transform: rotate(90deg);
                  transform: rotate(90deg);
          bottom: 10%;
        }
        &.arrow-bottom {
          -webkit-transform: rotate(-90deg);
                  transform: rotate(-90deg);
          top: 90%;
        }
      }

      .block-main__line {
        display: none;
        position: absolute;
        left: 0;
        bottom: 0;
        right: 0;
        height: 1px;
        background: url(../assets/images/mobile/line.svg) center no-repeat;
        background-size: 100%;

        @media $break-middle {
          display: block;
        }
      }
    }

    .main__logo {
      position: absolute;
      left: 0;
      top: 10px;
      bottom: 15px;
      width: 100%;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-pack: center;
          -ms-flex-pack: center;
              justify-content: center;
      -webkit-box-align: center;
          -ms-flex-align: center;
              align-items: center;
      text-align: center;

      .author-name{
        position: absolute;
        bottom: 0;
        top: 0;
        margin: auto 0;
        display: flex;
        align-items: center;
        z-index: 1;
        padding-top: 460px;
        color: #fff;
        font: 34px Arial, sans-serif;
      }

      &::after{
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        right: 0;
        bottom: 0;
        max-height: 400px;
        background:url(../assets/images/mainIam.jpg) center no-repeat;
        width: 310px;
        margin: auto;
        background-size: cover;
        border-radius: 20%;
        transform: scale(-1, 1);
      }

      @media $break-middle {
        display: none;
      }

      img {
        max-height: 100%;
        width: auto;
        @media $break-large {
          width: 20vw;
        }
      }
    }
  }
}

// end main

